root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
end_of_line = lf

[*.cs]
indent_size = 4
indent_style = space

# Code-block preferences
csharp_prefer_braces = true:error
csharp_prefer_simple_using_statement = true:suggestion

# All files
[*]
guidelines = 130
guidelines_style = 2.5px solid 40ff0000